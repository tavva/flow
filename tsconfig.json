{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
	"types": ["svelte", "node", "jest"],
    "baseUrl": "src",
	"rootDir": "src",
	"outDir": ".",
    "inlineSources": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": false,
	"strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "src/**/*.ts",
	"typings/**/*.d.ts"
  ],
  "exclude": [
	"node_modules"
  ]
}
